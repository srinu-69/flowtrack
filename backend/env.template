# =====================================================
# FLOWTRACK BACKEND ENVIRONMENT CONFIGURATION
# =====================================================
# Copy this file to .env and fill in your actual values
# Command: cp env.template .env
# =====================================================

# =====================================================
# APPLICATION SETTINGS
# =====================================================
APP_NAME=FlowTrack
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=True

# =====================================================
# SERVER CONFIGURATION
# =====================================================
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# =====================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =====================================================
# Full Database URL (AsyncPG format)
DATABASE_URL=postgresql+asyncpg://postgres:12345@localhost:5432/flow

# Individual Database Components (for reference/alternate usage)
DB_USER=postgres
DB_PASSWORD=12345
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flow

# =====================================================
# CORS CONFIGURATION
# =====================================================
# Allowed origins for CORS (comma-separated for production)
# For development: use "*" or specify local ports
# For production: specify exact origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# =====================================================
# SECURITY SETTINGS
# =====================================================
# Secret key for JWT tokens and encryption
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-here-change-in-production-use-secrets-token-urlsafe
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =====================================================
# EMAIL CONFIGURATION (Optional - for password reset)
# =====================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@flowtrack.com

# =====================================================
# FILE UPLOAD SETTINGS
# =====================================================
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# =====================================================
# LOGGING
# =====================================================
LOG_LEVEL=INFO
LOG_FILE=./logs/flowtrack.log

# =====================================================
# PRODUCTION DEPLOYMENT CHECKLIST
# =====================================================
# [ ] Copy this file: cp env.template .env
# [ ] Update DATABASE_URL with production database credentials
# [ ] Generate and set a strong SECRET_KEY
# [ ] Set ENVIRONMENT=production
# [ ] Set DEBUG=False
# [ ] Update ALLOWED_ORIGINS with production domain(s)
# [ ] Configure SMTP settings for email functionality
# [ ] Ensure all passwords are secure and unique
# [ ] Set up SSL/TLS certificates
# [ ] Configure firewall rules and security groups
# [ ] Set up database backups
# [ ] Review and secure all API endpoints
# [ ] Add .env to .gitignore (already done)
# =====================================================

